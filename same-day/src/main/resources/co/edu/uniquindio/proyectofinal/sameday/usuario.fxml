<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" prefHeight="600.0" prefWidth="689.0" spacing="12" style="-fx-padding: 25; -fx-background-color: #f9f9f9;" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/17.0.12" fx:controller="co.edu.uniquindio.proyectofinal.sameday.viewController.UsuarioController">

    <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Gestión de Usuarios" />

    <GridPane alignment="CENTER" hgap="10" vgap="10">
        <columnConstraints>
            <ColumnConstraints halignment="RIGHT" />
            <ColumnConstraints hgrow="ALWAYS" />
        </columnConstraints>

        <Label text="Nombre completo:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
        <TextField fx:id="txtNombre" promptText="Nombre completo" GridPane.columnIndex="1" GridPane.rowIndex="0" />

        <Label text="Correo electrónico:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
        <TextField fx:id="txtCorreo" promptText="Correo electrónico" GridPane.columnIndex="1" GridPane.rowIndex="1" />

        <Label text="Teléfono:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
        <TextField fx:id="txtTelefono" promptText="Teléfono" GridPane.columnIndex="1" GridPane.rowIndex="2" />

        <Label text="Cédula:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
        <TextField fx:id="txtCedula" promptText="Cédula" GridPane.columnIndex="1" GridPane.rowIndex="3" />

        <Label text="Dirección:" GridPane.columnIndex="0" GridPane.rowIndex="4" />
        <TextField fx:id="txtDireccion" promptText="Dirección" GridPane.columnIndex="1" GridPane.rowIndex="4" />
      <rowConstraints>
         <RowConstraints />
         <RowConstraints />
         <RowConstraints />
         <RowConstraints />
         <RowConstraints />
      </rowConstraints>
    </GridPane>

    <HBox alignment="CENTER" spacing="10">
        <Button onAction="#registrarUsuario" text="Registrar" />
        <Button onAction="#actualizarUsuario" text="Actualizar" />
        <Button onAction="#eliminarUsuario" text="Eliminar" />
    </HBox>

    <Separator />

    <Label style="-fx-font-size: 14px; -fx-font-weight: bold;" text="Usuarios registrados:" />

    <TableView fx:id="tablaUsuarios" prefHeight="250" prefWidth="600">
        <columns>
            <TableColumn fx:id="colNombre" prefWidth="124.0" text="Nombre" />
            <TableColumn fx:id="colCorreo" minWidth="9.0" prefWidth="120.0" text="Correo" />
            <TableColumn fx:id="colTelefono" prefWidth="133.0" text="Teléfono" />
            <TableColumn fx:id="colCedula" minWidth="0.0" prefWidth="135.0" text="Cédula" />
            <TableColumn fx:id="colDireccion" prefWidth="127.0" text="Dirección" />
        </columns>
    </TableView>

</VBox>
