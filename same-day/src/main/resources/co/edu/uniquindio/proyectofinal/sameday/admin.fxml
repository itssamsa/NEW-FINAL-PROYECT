<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx/17.0.6"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="co.edu.uniquindio.proyectofinal.sameday.viewController.AdminController">

    <!-- Barra superior con botones para cambiar panel -->
    <top>
        <HBox spacing="10">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <Button text="Gestión Usuarios" onAction="#mostrarUsuarios"/>
            <Button text="Gestión Repartidores" onAction="#mostrarRepartidores"/>
            <Button text="Asignación Envíos" onAction="#mostrarAsignacion"/>
        </HBox>
    </top>

    <!-- Panel central: StackPane alternando entre paneles -->
    <center>
        <StackPane fx:id="stackPanel" prefWidth="600" prefHeight="400">

            <!-- Panel Usuarios -->
            <VBox fx:id="panelUsuarios" spacing="10">
                <padding>
                    <Insets top="15" right="15" bottom="15" left="15"/>
                </padding>
                <Label text="Administración de Usuarios" style="-fx-font-size: 18px; -fx-font-weight: bold;" />

                <GridPane hgap="10" vgap="10">
                    <columnConstraints>
                        <ColumnConstraints percentWidth="25"/>
                        <ColumnConstraints percentWidth="75"/>
                    </columnConstraints>

                    <Label text="Nombre:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                    <TextField fx:id="txtNombre" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                    <Label text="Correo:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                    <TextField fx:id="txtCorreo" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                    <Label text="Teléfono:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                    <TextField fx:id="txtTelefono" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                    <Label text="Cédula:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                    <TextField fx:id="txtCedula" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

                    <Label text="Dirección:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
                    <TextField fx:id="txtDireccion" GridPane.rowIndex="4" GridPane.columnIndex="1"/>
                </GridPane>

                <HBox spacing="10">
                    <Button text="Registrar" onAction="#registrarUsuario"/>
                    <Button text="Actualizar" onAction="#actualizarUsuario"/>
                    <Button text="Eliminar" onAction="#eliminarUsuario"/>
                </HBox>

                <TableView fx:id="tablaUsuarios" prefHeight="200">
                    <columns>
                        <TableColumn fx:id="colNombre" text="Nombre" prefWidth="120"/>
                        <TableColumn fx:id="colCorreo" text="Correo" prefWidth="120"/>
                        <TableColumn fx:id="colTelefono" text="Teléfono" prefWidth="100"/>
                        <TableColumn fx:id="colCedula" text="Cédula" prefWidth="100"/>
                        <TableColumn fx:id="colDireccion" text="Dirección" prefWidth="120"/>
                    </columns>
                </TableView>
            </VBox>

            <!-- Panel Repartidores -->
            <VBox fx:id="panelRepartidores" spacing="10" visible="false">
                <padding>
                    <Insets top="15" right="15" bottom="15" left="15"/>
                </padding>
                <Label text="Administración de Repartidores" style="-fx-font-size: 18px; -fx-font-weight: bold;" />

                <GridPane hgap="10" vgap="10">
                    <columnConstraints>
                        <ColumnConstraints percentWidth="25"/>
                        <ColumnConstraints percentWidth="75"/>
                    </columnConstraints>

                    <Label text="ID:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                    <TextField fx:id="txtId" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                    <Label text="Nombre:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                    <TextField fx:id="txtNombreR" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                    <Label text="Documento:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                    <TextField fx:id="txtDocumento" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                    <Label text="Teléfono:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                    <TextField fx:id="txtTelefonoR" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

                    <Label text="Zona Cobertura:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
                    <TextField fx:id="txtZona" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

                    <Label text="Estado:" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
                    <ComboBox fx:id="cbEstado" GridPane.rowIndex="5" GridPane.columnIndex="1"/>
                </GridPane>

                <HBox spacing="10">
                    <Button text="Registrar" onAction="#registrarRepartidor"/>
                    <Button text="Actualizar" onAction="#actualizarRepartidor"/>
                    <Button text="Eliminar" onAction="#eliminarRepartidor"/>
                </HBox>

                <TableView fx:id="tablaRepartidores" prefHeight="200">
                    <columns>
                        <TableColumn fx:id="colId" text="ID" prefWidth="80"/>
                        <TableColumn fx:id="colNombreRR" text="Nombre" prefWidth="120"/>
                        <TableColumn fx:id="colDocumentoR" text="Documento" prefWidth="100"/>
                        <TableColumn fx:id="colTelefonoRR" text="Teléfono" prefWidth="100"/>
                        <TableColumn fx:id="colZonaR" text="Zona" prefWidth="100"/>
                        <TableColumn fx:id="colEstadoR" text="Estado" prefWidth="80"/>
                    </columns>
                </TableView>
            </VBox>

            <!-- Panel Asignación Envíos -->
            <VBox fx:id="panelAsignacion" spacing="10" visible="false">
                <padding>
                    <Insets top="15" right="15" bottom="15" left="15"/>
                </padding>
                <Label text="Asignación de Envíos" style="-fx-font-size: 18px; -fx-font-weight: bold;" />

                <GridPane hgap="10" vgap="10">
                    <columnConstraints>
                        <ColumnConstraints percentWidth="25"/>
                        <ColumnConstraints percentWidth="75"/>
                    </columnConstraints>

                    <Label text="Envío:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                    <ComboBox fx:id="cbEnvios" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                    <Label text="Repartidor:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                    <ComboBox fx:id="cbRepartidores" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
                </GridPane>

                <HBox spacing="10">
                    <Button fx:id="btnAsignar" text="Asignar Repartidor"/>
                </HBox>
            </VBox>

        </StackPane>
    </center>

</BorderPane>
