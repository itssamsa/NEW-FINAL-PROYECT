<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.chart.PieChart?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="co.edu.uniquindio.proyectofinal.sameday.viewController.AdminController"
            prefWidth="800" prefHeight="600">

    <!-- Barra lateral -->
    <left>
        <VBox spacing="10" alignment="CENTER" style="-fx-background-color: #f5f5f5; -fx-padding: 15;">
            <Label text="Panel de Administrador" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
            <Button text="Ver Repartidores" onAction="#handleVerRepartidores" />
            <Button text="Ver Envíos" onAction="#handleVerEnvios" />
            <Button text="Ver Métricas" onAction="#handleVerMetricas" />
            <Separator />
            <Button text="Cerrar Sesión" onAction="#handleCerrarSesion" style="-fx-background-color: #ff7070; -fx-text-fill: white;"/>
        </VBox>
    </left>

    <!-- Contenido dinámico -->
    <center>
        <StackPane>
            <!-- Panel Repartidores -->
            <VBox fx:id="panelRepartidores" visible="false" spacing="10" alignment="CENTER" style="-fx-padding: 20;">
                <Label text="Gestión de Repartidores" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
                <TableView fx:id="tablaRepartidores" prefHeight="400" prefWidth="600">
                    <columns>
                        <TableColumn text="ID" prefWidth="100"/>
                        <TableColumn text="Nombre" prefWidth="200"/>
                        <TableColumn text="Teléfono" prefWidth="150"/>
                        <TableColumn text="Estado" prefWidth="150"/>
                    </columns>
                </TableView>
            </VBox>

            <!-- Panel Envíos -->
            <VBox fx:id="panelEnvios" visible="false" spacing="10" alignment="CENTER" style="-fx-padding: 20;">
                <Label text="Gestión de Envíos" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
                <TableView fx:id="tablaEnvios" prefHeight="400" prefWidth="600">
                    <columns>
                        <TableColumn text="ID" prefWidth="100"/>
                        <TableColumn text="Cliente" prefWidth="200"/>
                        <TableColumn text="Destino" prefWidth="200"/>
                        <TableColumn text="Estado" prefWidth="100"/>
                    </columns>
                </TableView>
            </VBox>

            <!-- Panel Métricas -->
            <VBox fx:id="panelMetricas" visible="false" spacing="15" alignment="CENTER" style="-fx-padding: 20;">
                <Label text="Panel de Métricas" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
                <HBox spacing="20" alignment="CENTER">
                    <Label fx:id="lblTotalEntregados" text="Entregados: 0" style="-fx-font-size: 14px;"/>
                    <Label fx:id="lblTotalEnRuta" text="En ruta: 0" style="-fx-font-size: 14px;"/>
                </HBox>
                <PieChart fx:id="chartEnvios" prefHeight="350" prefWidth="400" />
            </VBox>
        </StackPane>
    </center>

</BorderPane>
