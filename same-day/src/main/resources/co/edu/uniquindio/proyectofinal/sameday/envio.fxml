<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="600" prefWidth="800" style="-fx-background-color: #f9f9f9; -fx-padding: 20;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="co.edu.uniquindio.proyectofinal.sameday.viewController.EnvioController">

    <!-- Título -->
    <Label fx:id="lblTitulo" layoutX="310" layoutY="20" style="-fx-font-size: 20px; -fx-font-weight: bold;" text="Gestión de Envíos" />

    <!-- Campos principales -->
    <Label layoutX="57.0" layoutY="80.0" text="Origen:" />
    <ComboBox fx:id="cbOrigen" layoutX="134.0" layoutY="75.0" prefWidth="200" />

    <Label layoutX="410.0" layoutY="80.0" text="Destino:" />
    <ComboBox fx:id="cbDestino" layoutX="509.0" layoutY="76.0" prefWidth="200" />

    <Label layoutX="57.0" layoutY="122.0" text="Peso (kg):" />
    <TextField fx:id="txtPeso" layoutX="133.0" layoutY="118.0" prefWidth="100" />

    <Label layoutX="411.0" layoutY="122.0" text="Volumen (m³):" />
    <TextField fx:id="txtVolumen" layoutX="509.0" layoutY="118.0" prefWidth="100" />

    <Label layoutX="57.0" layoutY="169.0" text="Estado:" />
    <ComboBox fx:id="cbEstado" layoutX="134.0" layoutY="165.0" prefWidth="150" />

    <Label layoutX="406.0" layoutY="169.0" text="Fecha estimada:" />
    <DatePicker fx:id="dpFechaEntrega" layoutX="509.0" layoutY="168.0" />

    <!-- Servicios adicionales -->
    <Label layoutX="334.0" layoutY="229.0" style="-fx-font-weight: bold;" text="Servicios adicionales:" />
    <CheckBox fx:id="chkSeguro" layoutX="219.0" layoutY="261.0" text="Seguro" />
    <CheckBox fx:id="chkPrioridad" layoutX="363.0" layoutY="261.0" text="Prioritario" />
    <CheckBox fx:id="chkFirma" layoutX="509.0" layoutY="261.0" text="Firma requerida" />

    <!-- Opcionales -->
    <Label layoutX="326.0" layoutY="300.0" style="-fx-font-weight: bold;" text="Características opcionales:" />
    <CheckBox fx:id="chkRastreo" layoutX="240.0" layoutY="330.0" text="Rastreo premium" />
    <CheckBox fx:id="chkNocturna" layoutX="484.0" layoutY="330.0" text="Entrega nocturna" />

    <!-- Botones -->
    <Button layoutX="100" layoutY="390" onAction="#calcularTarifa" prefWidth="130" text="Calcular tarifa" />
    <Button layoutX="325.0" layoutY="390.0" onAction="#confirmarEnvio" prefWidth="150" text="Confirmar envío" />
    <Button layoutX="583.0" layoutY="390.0" onAction="#cancelarEnvio" prefWidth="100" text="Cancelar" />

    <!-- Resultados -->
    <Label layoutX="50" layoutY="450" style="-fx-font-weight: bold;" text="Resumen del envío:" />
    <Label fx:id="lblCostoTotal" layoutX="70" layoutY="480" text="Costo total estimado: $" />
    <Label fx:id="lblDesglose" layoutX="70" layoutY="510" text="Desglose de tarifa:" />

</AnchorPane>
