<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="650" prefWidth="820"
            style="-fx-background-color: #f9f9f9; -fx-padding: 20;"
            xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="co.edu.uniquindio.proyectofinal.sameday.viewController.EnvioController">

    <Label layoutX="300" layoutY="20"
           style="-fx-font-size: 20px; -fx-font-weight: bold;"
           text="Gestión de Envíos" />

    <Label layoutX="50" layoutY="70" text="ID Usuario:" />
    <TextField fx:id="txtIdUsuario" layoutX="150" layoutY="65" prefWidth="200" promptText="Ej: U-12345" />
    <Button layoutX="370" layoutY="65" prefWidth="120" text="Cargar direcciones" onAction="#cargarDireccionesUsuario"/>

    <Label layoutX="50" layoutY="120" text="Origen:" />
    <ComboBox fx:id="cbOrigen" layoutX="150" layoutY="115" prefWidth="260"/>

    <Label layoutX="50" layoutY="170" text="Destino:" />
    <ComboBox fx:id="cbDestino" layoutX="150" layoutY="165" prefWidth="260"/>

    <Label layoutX="50" layoutY="220" text="Peso (kg):" />
    <TextField fx:id="txtPeso" layoutX="150" layoutY="215" prefWidth="100" />

    <Label layoutX="300" layoutY="220" text="Volumen (m³):" />
    <TextField fx:id="txtVolumen" layoutX="420" layoutY="215" prefWidth="100" />

    <Label layoutX="50" layoutY="270" text="Tipo de cálculo:" />
    <ComboBox fx:id="cbEstrategia" layoutX="170" layoutY="265" prefWidth="250" />

    <Label layoutX="50" layoutY="320" style="-fx-font-weight: bold;" text="Servicios adicionales:" />
    <CheckBox fx:id="chkSeguro" layoutX="50" layoutY="350" text="Seguro" />
    <CheckBox fx:id="chkPrioridad" layoutX="180" layoutY="350" text="Prioritario" />
    <CheckBox fx:id="chkFirma" layoutX="320" layoutY="350" text="Firma requerida" />
    <CheckBox fx:id="chkFragil" layoutX="485" layoutY="350" text="Frágil" />

    <Label layoutX="50" layoutY="390" style="-fx-font-weight: bold;" text="Características opcionales:" />
    <CheckBox fx:id="chkRastreo" layoutX="50" layoutY="420" text="Rastreo premium" />
    <CheckBox fx:id="chkNocturna" layoutX="230" layoutY="420" text="Entrega nocturna" />

    <Button layoutX="70" layoutY="470" onAction="#calcularTarifa" prefWidth="150" text="Calcular tarifa" />
    <Button layoutX="260" layoutY="470" onAction="#confirmarEnvio" prefWidth="150" text="Confirmar envío" />
    <Button layoutX="450" layoutY="470" onAction="#cancelarEnvio" prefWidth="150" text="Cancelar" />

    <Label layoutX="50" layoutY="520" style="-fx-font-weight: bold;" text="Costo total:" />
    <Label fx:id="lblCostoTotal" layoutX="150" layoutY="520" text="Costo total estimado: $" />

    <Label layoutX="50" layoutY="550" style="-fx-font-weight: bold;" text="Resumen del envío:" />
    <TextArea fx:id="txtResumen" layoutX="50" layoutY="580" prefHeight="121" prefWidth="700" wrapText="true" />

</AnchorPane>
